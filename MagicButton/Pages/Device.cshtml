@page
@model MagicButton.Pages.DeviceModel

@{
    var isNew = Model.DeviceConfig == null || Model.DeviceConfig.Id == Guid.Empty;
    ViewData["Title"] = isNew ? "Create Device" : "Edit Device";
}

<h1><i class="bi bi-gear-fill"></i> Settings</h1>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light p-2">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Settings</li>
    </ol>
</nav>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeviceConfig.Id" />
            <div class="form-group">
                
                <label asp-for="DeviceConfig.DeviceId" class="control-label">Name</label>
                <input asp-for="DeviceConfig.DeviceId" class="form-control" />
                <span asp-validation-for="DeviceConfig.DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="DeviceConfig.ButtonPin" class="control-label"></label>
                <input asp-for="DeviceConfig.ButtonPin" class="form-control" />
                <span asp-validation-for="DeviceConfig.ButtonPin" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DeviceConfig.ButtonPullUp" /> @Html.DisplayNameFor(model => model.DeviceConfig.ButtonPullUp)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="DeviceConfig.DebounceMs" class="control-label"></label>
                <input asp-for="DeviceConfig.DebounceMs" class="form-control" />
                <span asp-validation-for="DeviceConfig.DebounceMs" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="DeviceConfig.DoublePressWindowMs" class="control-label"></label>
                <input asp-for="DeviceConfig.DoublePressWindowMs" class="form-control" />
                <span asp-validation-for="DeviceConfig.DoublePressWindowMs" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="DeviceConfig.LongPressThresholdMs" class="control-label"></label>
                <input asp-for="DeviceConfig.LongPressThresholdMs" class="form-control" />
                <span asp-validation-for="DeviceConfig.LongPressThresholdMs" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                <label asp-for="DeviceConfig.RetriesMaxAttempts" class="control-label"></label>
                <input asp-for="DeviceConfig.RetriesMaxAttempts" class="form-control" />
                <span asp-validation-for="DeviceConfig.RetriesMaxAttempts" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="DeviceConfig.RetriesBaseDelayMs" class="control-label"></label>
                <input asp-for="DeviceConfig.RetriesBaseDelayMs" class="form-control" />
                <span asp-validation-for="DeviceConfig.RetriesBaseDelayMs" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                <label asp-for="DeviceConfig.CreatedAtUtc" class="control-label"></label>
                <input asp-for="DeviceConfig.CreatedAtUtc" class="form-control" />
                <span asp-validation-for="DeviceConfig.CreatedAtUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="DeviceConfig.UpdatedAtUtc" class="control-label"></label>
                <input asp-for="DeviceConfig.UpdatedAtUtc" class="form-control" />
                <span asp-validation-for="DeviceConfig.UpdatedAtUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    @(isNew ? "Create" : "Save")
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
