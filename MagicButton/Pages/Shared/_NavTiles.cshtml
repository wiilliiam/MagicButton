@model IEnumerable<(string Title, string Icon, string Url, string Description)>

<div class="container py-4">
    <div class="row g-4">
        @foreach (var tile in Model)
        {
            <div class="col-6 col-lg-4">
                <a href="@tile.Url" class="text-decoration-none text-dark">
                    <div class="card shadow-sm border-0 h-100 text-center nav-tile">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <i class="bi bi-@tile.Icon fs-1 mb-2 text-primary"></i>
                            <h5 class="fw-semibold">@tile.Title</h5>
                            @if (!string.IsNullOrEmpty(tile.Description))
                            {
                                <p class="text-muted small mb-0">@tile.Description</p>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .nav-tile {
        transition: all 0.2s ease-in-out;
        border-radius: 1rem;
    }
    .nav-tile:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    }
</style>
